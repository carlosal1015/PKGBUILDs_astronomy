pkgname="findorb-git"
pkgver=1.0.0
pkgrel=1
pkgdesc="Orbit determination from observations "
arch=("x86_64")
url='https://github.com/Bill-Gray/find_orb/'
license=('GPL2')
makedepends=('git')
source=("$pkgname::git+https://github.com/Bill-Gray/find_orb.git"
        "git+https://github.com/Bill-Gray/lunar.git"
        "git+https://github.com/Bill-Gray/sat_code.git"
        "git+https://github.com/Bill-Gray/jpl_eph.git"
        "git+https://github.com/Bill-Gray/miscell.git")
sha256sums=('SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP')


build() {
    cd "$srcdir/lunar/"
    make
    #make integrat
    make install
    cd "$srcdir/jpl_eph"
    make libjpl.a
    make install
    cd "$srcdir/sat_code"
    make sat_id
    make install

    cd "$srcdir/findorb-git"
    make
    make install
}

package() {
  meson install -C build --destdir="$pkgdir"
}
